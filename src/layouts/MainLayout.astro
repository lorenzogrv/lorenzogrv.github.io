---
// Astro frontmatter never runs on the browser!
import { ViewTransitions } from 'astro:transitions'
import { getImage } from 'astro:assets'

import '../css/styles.css'

import Link from '../components/Link.astro'

const { id, title, bg } = Astro.props

// maybe like  [ xs,  sm,  md,   lg,   xl]
const widths = [360, 600, 900, 1200, 1536].map(w => w * 1.5)
const backImg = await getImage({
  src: bg,
  loading: 'lazy',
  widths,
  sizes: widths.map(w => `(max-width: ${w}px) ${w}px`).join(', '),
  format: 'webp'
})
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/img/Yin_yang.svg" />
    <meta name="viewport" content="width=device-width, initial-scale:1.0" />

    <title>lorenzogrv.tech</title>

    <!--  META Tags esenciales -->
    <meta property="og:title" content="lorenzogrv.tech">
    <meta property="og:type" content="website" />
    <meta property="og:image" content="../img/avatar.png">
    <meta property="og:url" content="https://lorenzogrv.tech">
    <meta name="twitter:card" content="summary_large_image">
  
    <!--  Non esenciais, Pero recomendadas -->
    <meta property="og:description" content="I'm a self-taught developer with some years of expertise">
    <meta property="og:site_name" content="lorenzogrv.tech">
    <meta name="twitter:image:alt" content="Lorenzo GarcÃ­a Rivera">

    <ViewTransitions />
  </head>
  <body class={id} transition:animate="fade">
    <header>
      <h1>
        lorenzogrv.tech
        <small>Yet another web made from scratch</small>
      </h1>
      <nav>
        <Link prefetch='viewport' href="/">Home</Link>
        <Link prefetch='viewport' href="/about">About me</Link>
        <Link prefetch='viewport' href="/more">More</Link>
      </nav>
    </header>

    <main>
      <section
         id={id}
	 style={[
	   `--bg-image: url(${backImg.src})`,
	   `--bg-image-xs: url(${backImg.srcSet.values[0].url})`,
	   `--bg-image-sm: url(${backImg.srcSet.values[1].url})`,
	   `--bg-image-md: url(${backImg.srcSet.values[2].url})`,
	   `--bg-image-lg: url(${backImg.srcSet.values[3].url})`,
	   `--bg-image-xl: url(${backImg.srcSet.values[4].url})`
	   ].join(';')}
      >
        <slot />
      </section>
    </main>

    <footer>
      &copy; lorenzogrv <script>document.write(new Date().getFullYear())</script>
      <a
        href="https://creativecommons.org/licenses/by-nc-nd/3.0/es/"
        target="_blank"
        rel="noreferrer"
      >CC BY NC ND 3.0</a>
    </footer>
  </body>
</html>
<style is:global>
/**
 * Backgrounds
 */

main > section {
  background-size: cover;
  background-position: center center;
  background-image: var(--bg-image-xs, "");
}
@media (min-width: 600px) {
  main > section { background-image: var(--bg-image-sm, ""); }
}
@media (min-width: 900px) {
  main > section { background-image: var(--bg-image-md, ""); }
}
@media (min-width: 1200px) {
  main > section { background-image: var(--bg-image-lg, ""); }
}
@media (min-width: 1536px) {
  main > section { background-image: var(--bg-image-xl, ""); }
}
</style>
