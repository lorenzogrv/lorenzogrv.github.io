---
import { Image } from 'astro:assets'

import avatar from '../img/avatar-hd.jpg'
---
<Image src={avatar} width={512} densities={[2]} alt="lorenzogrv" />
<style is:global>
  img[alt=lorenzogrv] {
    display: block;
    margin: 2em auto;
    border-radius: 50%;
    --size: 172px;
    max-width: var(--size);
    max-height: var(--size);
    filter: drop-shadow(0 0 2em var(--color-bronze-faded));
  }
  @media (min-width: 768px) {
    img[alt=lorenzogrv] {
      --size: 256px;
    }
  }
</style>
