---
import Work from '../img/svg/work_24px.svg?raw'
import Study from '../img/svg/school_24px.svg?raw'
import Course from '../img/svg/local_library_24px.svg?raw'

const { kind } = Astro.props
---
<span class="icon">
  <Fragment
    set:html={(() => {
      switch (kind) {
        case 'work': return Work
        case 'study-official': return Study
        case 'study-complement': return Course
        default: throw new Error(`Unknown kind: ${kind}`)
      }
    })()}
  />
</span>
<style>
  span.icon {
    display: inline-block;
    box-sizing: border-box;
    min-width: 32px;
    min-height: 32px;
    padding: 5px;
    border-radius: 50%;
    background-color: rbg(0, 0, 0, .5);
    background-filter: blur(5px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-fg-faded);
  }
  span.icon :global(svg path:not([fill=none])) {
    fill: currentColor;
  }
</style>
